shopt -s expand_aliases

alias ls="ls -lAGHhv --time-style=+'|' --color=auto"
alias v="vim"
alias bat-stat="cat /sys/class/power_supply/BAT0/capacity && cat /sys/class/power_supply/BAT0/status"
alias cal="cal -m"
alias rg="rg --no-heading --hidden -H"
alias fd="fd -u"
alias ffplay="ffplay -seek_interval 1"
